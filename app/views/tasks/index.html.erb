<div class= "container col-4 my-15">
<h1>List of Tasks view</h1>

<ul>
  <% @tasks.each do |t| %>
    <li class="d-flex"><input type="checkbox" <%= t.completed ? "checked" : "" %>>
      <%= link_to t.title, task_path(t) %> 
      <p class="delete"><%= link_to "Delete", delete_path(t),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %></p>
    </li>
  <% end %>
</ul>

<%= link_to "+ Add a new task", new_path  %>
</div>
